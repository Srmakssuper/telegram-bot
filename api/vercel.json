{
  "version": 2,
  "builds": [
    {
      "src": "bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "bot.py"
    },
    {
      "src": "/set-webhook",
      "dest": "bot.py"
    },
    {
      "src": "/api/webhook",
      "dest": "bot.py",
      "methods": ["POST"]
    }
  ]
}